extend type Query {
    messages(first: Int, after: Int): MessageConnection
}

extend type Mutation {
    addMessage(input: AddMessageData!): Message
}

input AddMessageData {
    text: String!
    userID: ID!
}

type Message implements Node {
    id: ID!
    text: String!
    user: User
    createdAt: String!
}

type MessageEdge {
    node: Message
    cursor: String
}

type MessageConnection {
    edges: [MessageEdge]
    pageInfo: PageInfo
}
